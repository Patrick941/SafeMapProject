<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.AddItineraryActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/p1toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Primary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_arrow_add_itinerary_activity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_back_ios_40"
            android:paddingStart="20dp"
            />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Itinerary"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/black"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >

        <EditText
            android:id="@+id/editText_add_itinerary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter an Itinerary Title"
            android:textSize="25sp"
            android:textColorHint="@color/hint_grey"
            android:layout_marginLeft="10dp"
            android:inputType="text"
            />

    </LinearLayout>

    <Button
        android:id="@+id/button_add_itinerary"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/Button"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:text="Create Itinerary"
        android:layout_gravity="center"
        android:padding="10dp"
        />

</LinearLayout>