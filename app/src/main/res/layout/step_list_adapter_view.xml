    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView_step_adapter_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_step_adapter_title"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="default title"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"/>

<!--        <View
            android:id="@+id/view"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />-->

        <LinearLayout
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:id="@+id/line"
                android:layout_width="4dp"
                android:layout_height="38dp"
                android:background="@drawable/line" />

            <View
                android:id="@+id/circle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/outline_circle_16" />

            <View
                android:id="@+id/line2"
                android:layout_width="4dp"
                android:layout_height="38dp"
                android:background="@drawable/line" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/baseline_location_on_16" />

                <TextView
                    android:id="@+id/textView_step_adapter_address"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="default location"
                    android:textColor="#636363"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/baseline_credit_card_24" />

                <TextView
                    android:id="@+id/textView_step_adapter_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0 â‚¬"
                    android:textColor="#636363"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/baseline_info_24" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:text="description"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#636363" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

